<p>
  Logged in as <strong><%= current_user.email %></strong>.</br>
<%= link_to 'Edit your profile', edit_user_registration_path %>
</p>
<%= search_form_for @q, url: admin_users_path do |f| %>

  <%= f.label :full_name_cont, "Input: " %>
  <%= f.search_field :full_name_cont %>

  <%= f.submit %>
<% end %>

<div class="mx-auto w-50">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">E-mail</th>
        <th scope="col">Confirmed</th>
        <th scope="col">Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.first_name  %></td>
          <td><%= user.last_name  %></td>
          <td><%= user.email  %></td>
          <td><%= user.confirmed?  %></td>
          <td><%= link_to 'Edit user', edit_admin_user_path(id: user.id)  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
