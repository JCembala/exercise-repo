<h1>Posts</h1>
<%= button_to "New post", new_post_path, method: :get %>

<ul class="list-group d-flex p-2 align-items-center" id="posts">
  <% @posts.each do |post| %> 
    <li class="list-group-item w-25" id="post">
      <%= render post %>
      <p>
        <%= link_to "Show this post", post_path(post) %>
      </p>
    </li>
  <% end %>
  <div class="digg_pagination">
    <%= paginate @posts %>
  </div>
</ul>

